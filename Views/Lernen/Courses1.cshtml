@model IEnumerable<SBC.Models.LernenItem>
@{
    ViewBag.Title = "Биология";
}
@section SidePanel
    {
    <div class="alert-success">
        @foreach (var item in Model)
        {

            <a class="nav-link" href="#heading_@item.idLernen">Тема @item.idLernen</a>
        }
    </div>
}
<h2>Программа подготовки к ЦТ по биологии.</h2>
<div class="accordion accordion-flush" id="accordionFlushExample">
    @foreach (var item in Model)
    {
        <div class="accordion-item">
            <div class="accordion-header" id="heading_@item.idLernen">
                <h5 class="mb-0">
                    <button class="btn btn-light accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@item.idLernen" aria-expanded="false" aria-controls="collapse_@item.idLernen">
                        @item.nameLernen
                    </button>
                </h5>
            </div>
            <div id="collapse_@item.idLernen" class="accordion-collapse collapse" aria-labelledby="heading_@item.idLernen"  data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    @Html.Action("Tema" + item.idLernen, "Courses1")
                </div>
            </div>
        </div>
    }
</div>


